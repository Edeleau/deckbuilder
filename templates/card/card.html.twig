{% extends 'base.html.twig' %}

{% block stylesheets %}
	<link rel="stylesheet" href="{{ asset('css/card.css') }}">
{% endblock stylesheets %}

{% block title %}Every cards
{% endblock title %}

{% block body %}
	<div class="container-fluid js-filter">
		<div class="row ">
			<div class="col-md-3 js-filter-form">
				{% include "card/_filter.html.twig" %}
			</div>
			<div class="col-md-9">
				<div class="grid js-filter-content">

					{% set orderBy = app.request.query.get("order") %}
                    {% if orderBy is empty %}
                        {% set orderBy = "nom" %}
                    {% endif %}
                    
					{% for card in cards | sort((a,b) => attribute(a,orderBy) <=> attribute(b,orderBy) )%}

						{% include 'card/_card.html.twig' with {card: card} only %}
					{% endfor %}
				</div>
			</div>
		</div>

	</div>
{% endblock body %}
