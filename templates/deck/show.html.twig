{% extends 'base.html.twig' %}

{% block title %}Deck{% endblock %}

{% block body %}
    <h1>Deck</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ deck.id }}</td>
            </tr>
            <tr>
                <th>Format</th>
                <td>{{ deck.format }}</td>
            </tr>
            <tr>
                <th>Nom</th>
                <td>{{ deck.nom }}</td>
            </tr>
            <tr>
                <th>Note</th>
                <td>{{ deck.note }}</td>
            </tr>
            <tr>
                <th>Prix</th>
                <td>{{ deck.prix }}</td>
            </tr>
            <tr>
                <th>Type</th>
                <td>{{ deck.type }}</td>
            </tr>
            <tr>
                <th>Date_post</th>
                <td>{{ deck.datePost ? deck.datePost|date('Y-m-d') : '' }}</td>
            </tr>
            <tr>
                <th>Img</th>
                <td>{{ deck.img }}</td>
            </tr>
            <tr>
                <th>Auteur</th>
                <td>{{ deck.auteur }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('all_deck') }}">back to list</a>

    <a href="{{ path('my_deck') }}">back to my list</a>

    <a href="{{ path('deck_edit', {'id': deck.id}) }}">edit</a>

    {{ include('deck/_delete_form.html.twig') }}
{% endblock %}
